// Tests creation of dates and outputting their values


y = date('20120105');
dateString = y.toString();
println("Date is " + dateString);
assert(dateString == "20120105");
z = y + 1;

println("Date is " + y);
println("Date+1 is " + z);

x = y - 1;

println("Date-1 is " + x);

// Now lets use a business date calendar

y = date('20120804', 'BDF');
dateString = y.toString();
println("Date is " + dateString);
assert(y.toString() == "20120804");

z = y + 1;

println("BDF forward from Saturday of " + y + " is " + z);return true;
