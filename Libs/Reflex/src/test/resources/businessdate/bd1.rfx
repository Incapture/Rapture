// A test of manipulation of business date documents

// Assume our bd documents look like this
// {
//    "today" : "2012-05-01",
//    "tomorrow" : "2012-05-02",
//    "yesterday" : "2012-04-30"
// }

// Manipulate documents like that, in particular, incrementing the business date

today = date('', 'BDF');
today = today + 0;
tomorrow = today + 1;
yesterday = today - 1;

bd = {};
bd['today'] = '' + today;
bd['yesterday'] = '' + yesterday;
bd['tomorrow'] = '' + tomorrow;

println("Business date is " + bd);

def nextBusinessDay(bdoc) 
    bd = bdoc;
    bd['yesterday'] = bd['today'];
	bd['today'] = bd['tomorrow'];
	tomorrowDate = date(bd['tomorrow'], 'BDF');
	tomorrowDate = tomorrowDate + 1;
	bd['tomorrow'] = '' + tomorrowDate;
	return bd;
end


for i = 0 to 10 do
	nextbd = nextBusinessDay(bd);
	println("Next business date document is " + nextbd);
end

// Testing Business Day Forward Actual (BDFAct)

today = date('', 'BDFAct');
assert(today == today);
assert(today <= today);
assert(today >= today);

for i = 1 to 10 do
    nextBD = today + i; 
    assert(today <= nextBD);
	println("BD after " + i + " days is : " + nextBD);
end

for i = 1 to 10 do
    prevBD = today - i;
    assert(today > prevBD);
	println("BD prior to " + i + " days is : " + prevBD);
end

