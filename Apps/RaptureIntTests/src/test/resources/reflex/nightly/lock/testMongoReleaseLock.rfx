lockUri=docRepoUri + 'reflexLock'+rand(1000000);
lockConfig = #lock.createLockManager(lockUri, "LOCKING USING MONGODB {}", "");
assert(lockConfig != null);
lockHandle = #lock.acquireLock(lockUri, lockConfig, 1, 10);
assert(lockHandle!=null);
sleep(5000);
lockHandle2=#lock.acquireLock(lockUri, lockConfig, 1, 10);
assert(lockHandle2==null);
sleep(6000);
lockHandle3=#lock.acquireLock(lockUri, lockConfig, 1, 10);
assert(lockHandle3!=null);
assert(#lock.releaseLock(lockUri, lockConfig, lockHandle3));
return true;
